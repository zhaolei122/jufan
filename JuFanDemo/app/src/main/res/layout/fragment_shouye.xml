<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/search_img_id"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/search" />

        <LinearLayout
            android:id="@+id/l_all_id"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/gp_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/gb_one_id"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/about_bottom_selector"
                    android:button="@null"
                    android:checked="true"
                    android:drawableBottom="@drawable/about_bottom_selector"
                    android:gravity="center"
                    android:text="关注"
                    android:textSize="25dp"
                    android:textColor="@drawable/rbtext_selector" />

                <RadioButton
                    android:id="@+id/gb_two_id"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/about_bottom_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="热门"
                    android:textSize="17dp"
                    android:textColor="@drawable/rbtext_selector" />

                <RadioButton
                    android:textSize="17dp"
                    android:id="@+id/gb_three_id"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/about_bottom_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="最新"
                    android:textColor="@drawable/rbtext_selector" />
            </RadioGroup>
        </LinearLayout>

        <ImageView
            android:id="@+id/champion_img_id"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/li_hoem_richlist_img" />
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v4.view.ViewPager>
</LinearLayout>
